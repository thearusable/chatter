<div class="comment">
  <a class="avatar">
    <%= image_tag message.user.avatar.url(:thumb) %>
  </a>
  <div class="content">
    <a class="author"><%= message.user.nickname %></a>
    <div class="metadata">
      <div class="date"><%= distance_of_time_in_words(message.timestamp, Time.now) %></div>
    </div>
    <div class="text">
      <%= message.body %>
    </div>
  </div>
</div>
