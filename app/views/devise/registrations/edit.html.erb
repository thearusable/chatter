<div class="ui raised segment container">
  <h2 class="ui header">Update your profile.</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "ui form", method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="ui segment">
    <% if resource.avatar.exists? %>
      <%= image_tag resource.avatar.url(:medium) %><br/>
    <% end %>
    <div class="field">
      <%= f.label :avatar %>
      <%= f.file_field :avatar %>
    </div>
  </div>

  <div class="ui segment">
    <div class="three fields">
      <div class="field">
        <%= f.label :age %><br />
        <%= f.select :age, (1..100) %>
      </div>

      <div class="field">
        <%= f.label :sex %><br />
        <%= f.select :sex, User.sexes.keys.to_a %>
      </div>

      <div class="field">
        <%= f.label :orientation %><br />
        <%= f.select :orientation, User.orientations.keys.to_a %>
      </div>
    </div>

  </div>

  <div class="ui segment">

    <div class="two fields">
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email %>
      </div>

      <div class="field">
        <%= f.label :nickname %><br />
        <%= f.text_field :nickname %>
      </div>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="two fields">
      <div class="field">
        <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "off" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>
    </div>

  </div>

  <div class="ui segment">

    <div class="required field">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit "Update", class: 'ui submit button' %>
    </div>

  </div>

<% end %>

<div class="ui segment">

<h3 class="ui header">Unhappy?</h3>

<%= button_to "Cancel my account", registration_path(resource_name), class: 'ui submit button', data: { confirm: "Are you sure?" }, method: :delete %>

</div>

</div>
